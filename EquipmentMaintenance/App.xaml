<prismUnity:PrismUnityApplication 
    x:Class="EquipmentMaintenance.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EquipmentMaintenance"
    xmlns:prismUnity="using:Prism.Unity.Windows"
    RequestedTheme="Light">
    <prismUnity:PrismUnityApplication.Resources>
        <!-- Application-specific resources -->
        <ResourceDictionary>
            <local:AlternatingIndexConverter x:Key="ColorConvert"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/MainStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </prismUnity:PrismUnityApplication.Resources>
</prismUnity:PrismUnityApplication>
